<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.WildRiftDictionary.Element" parent="Theme.WildRiftDictionary.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.WildRiftDictionary.Element.Coin" parent="Theme.WildRiftDictionary.Element">
        <item name="android:drawableStart">@drawable/icon_coin</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFB300</item>
    </style>

    <style name="Theme.WildRiftDictionary.Element.CoolTime" parent="Theme.WildRiftDictionary.Element">
        <item name="android:drawableStart">@drawable/ic_hourglass_24</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5383E8</item>
    </style>

    <style name="Theme.WildRiftDictionary.Element.Name" parent="Theme.WildRiftDictionary.Element">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00ACC1</item>
    </style>

    <style name="Theme.WildRiftDictionary.Element.Stats" parent="Theme.WildRiftDictionary.Element">
        <item name="android:gravity">start</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#CD9B7D</item>
    </style>

    <style name="Theme.WildRiftDictionary.Element.Description" parent="Theme.WildRiftDictionary.Element">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>